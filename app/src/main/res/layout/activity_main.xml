<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:fitsSystemWindows="true"
  android:layout_height="match_parent">
  <RelativeLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_alignParentTop="false"
    android:background="@color/toolbar_color_dark"
    android:gravity="center"
    android:layout_gravity="center">
    <LinearLayout
      android:id="@+id/header_child"
      android:layout_width="match_parent"
      android:layout_height="95dp"
      android:orientation="vertical"
      android:background="@color/toolbar_color_dark"
      android:gravity="center"
      android:layout_gravity="center">
      <TextView
        android:id="@+id/text_viewc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="4dp"
        android:textSize="24sp"
        android:text="WIMEA-ICT DATA " />

      <TextView
        android:id="@+id/text_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="4dp"
        android:textSize="18sp"
        android:text="REPOSITORY" />

    </LinearLayout>
  </RelativeLayout>
  <RelativeLayout
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:layout_alignParentBottom="true"
    android:background="@color/toolbar_color_dark"
    android:gravity="center"
    android:layout_gravity="center">
    <TextView
      android:id="@+id/footer_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="copyright \u00A9 2018 WIMEA-ICT WDR"
      android:textColor="#FFFFFF"
      android:gravity="center"
      android:textSize="10sp"/>
  </RelativeLayout>

  <ScrollView
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/footer"
    android:layout_below="@+id/header"
    android:fillViewport="true">


    <LinearLayout
      android:id="@+id/myLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/toolbar_color_dark"
      android:orientation="vertical">

      <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible" />

      <LinearLayout
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="@dimen/loginform"
        android:layout_marginRight="@dimen/loginform"
        android:layout_marginTop="@dimen/loginform"
        android:background="@drawable/top_background"
        android:gravity="top"
        android:orientation="horizontal"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <View
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_weight="2"
          android:visibility="invisible" />

        <ImageView
          android:id="@+id/imageView1"
          android:layout_width="100dp"
          android:layout_height="70dp"
          android:layout_gravity="top"
          android:padding="5dp"
          android:scaleY="1.5"
          android:src="@drawable/logo_colored"
          android:visibility="visible" />

        <View
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_weight="2"
          android:visibility="invisible" />


        <ImageView
          android:id="@+id/imageView2"
          android:layout_width="100dp"
          android:layout_height="75dp"
          android:layout_gravity="center_horizontal"
          android:src="@drawable/maklogo"
          android:visibility="visible" />

        <View
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_weight="2"
          android:visibility="invisible" />

        <ImageView
          android:id="@+id/imageView3"
          android:layout_width="100dp"
          android:layout_height="70dp"
          android:layout_gravity="center_horizontal"
          android:scaleX="1.1"
          android:src="@drawable/logo" />

        <View
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_weight="2"
          android:visibility="invisible" />

      </LinearLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/loginform"
        android:layout_marginRight="@dimen/loginform"
        android:layout_marginTop="0dp"
        android:background="@drawable/layout_bg"
        android:orientation="vertical">

        <TextView
          android:layout_width="wrap_content"
          android:layout_marginTop="20sp"
          android:layout_height="wrap_content"
          android:text="welcome"
          android:textSize="20dp" />

        <TextView
          android:id="@+id/name"
          android:text="name here"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="0dp"
          android:textColor="@color/colorAccent"
          android:textSize="24dp" />

        <TextView
          android:id="@+id/email"
          android:text="userRole"
          android:textStyle="italic"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="13dp" />

        <TextView
          android:layout_marginLeft="35sp"
          android:layout_marginRight="35sp"
          android:layout_marginTop="5sp"
          android:layout_marginBottom="25sp"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#DDC4C4C4"/>

        <TextView
          android:id="@+id/location_result"
          android:text="location Results"
          android:visibility="gone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="2dp"
          android:textSize="18dp" />

        <TextView
          android:text="Distance from Station"
          android:textStyle="italic"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="12dp" />

        <TextView
          android:id="@+id/distance"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:textColor="@color/colorAccent"
          android:textSize="30sp" />

        <TextView
          android:id="@+id/updated_on"
          android:text="last update"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="1dp"
          android:layout_marginBottom="20sp"
          android:textSize="11dp" />

        <FrameLayout
          android:layout_width="wrap_content"
          android:padding="5dp"
          android:layout_marginBottom="@dimen/loginform"
          android:clickable="true"
          android:background="@drawable/button_refresh"
          android:layout_height="wrap_content">
          <Button
            android:id="@+id/refresh_location"
            style="?android:textAppearanceSmall"
            android:layout_width="50sp"
            android:paddingLeft="2px"
            android:paddingBottom="3px"
            android:background="@drawable/ic_action_refresh"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:layout_height="50sp"
            android:textStyle="bold"/>
        </FrameLayout>


        <Button
          android:id="@+id/btnLogout"
          android:layout_width="46dp"
          android:padding="0dp"
          android:layout_height="25sp"
          android:layout_marginTop="4dip"
          android:background="@null"
          android:text="Logout"
          android:textColor="@color/colorPrimary"
          style="@style/Base.Theme.AppCompat.Light"
          android:textAllCaps="false"
          android:textSize="13dp" />


      </LinearLayout>


      <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible" />
    </LinearLayout>


  </ScrollView>
</RelativeLayout>
