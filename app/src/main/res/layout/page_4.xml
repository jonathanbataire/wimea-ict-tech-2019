<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
  android:id="@+id/layout4"
  android:orientation="vertical"
  android:background="@drawable/layout_bg"
  android:layout_height="match_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_margin="@dimen/loginform"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_marginRight="8dp"
      android:layout_marginTop="3dp"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:layout_marginLeft="8dp"
      android:layout_gravity="center_vertical"
      android:orientation="vertical"
      android:layout_height="match_parent">
      <LinearLayout
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:layout_weight="3"
          android:layout_marginLeft="3dp"
          android:layout_height="wrap_content">

          <EditText
            android:id="@+id/attd_thermo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Attd.Thermo.(C)"
            android:textSize="@dimen/formTextSize"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:layout_weight="3"
          android:layout_marginLeft="3dp"
          android:layout_height="wrap_content">

          <EditText
            android:id="@+id/correction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correction"
            android:textSize="@dimen/formTextSize"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:layout_weight="3"
          android:layout_marginLeft="3dp"
          android:layout_height="wrap_content">

          <EditText
            android:id="@+id/pr_as_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pr.As Read(C)"
            android:textSize="@dimen/formTextSize"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:layout_weight="3"
          android:layout_marginLeft="3dp"
          android:layout_height="wrap_content">

          <EditText
            android:id="@+id/clp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="C.L.P(mb)"
            android:textSize="@dimen/formTextSize"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>


      </LinearLayout>

    </LinearLayout>


  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/loginform"
    android:layout_marginBottom="@dimen/loginform"
    android:layout_marginRight="@dimen/loginform"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_marginRight="8dp"
      android:layout_marginTop="3dp"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:layout_marginLeft="8dp"
      android:layout_gravity="center_vertical"
      android:orientation="vertical"
      android:layout_height="match_parent">
      <LinearLayout
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:layout_weight="3"
          android:layout_marginLeft="3dp"
          android:layout_height="wrap_content">
          <!-- f \u2109 c \u2103-->

          <EditText
            android:layout_width="match_parent"
            android:id="@+id/min_degrees_cel"
            android:layout_height="wrap_content"
            android:hint="Min Temperature (\u2103)"
            android:textSize="@dimen/formTextSize"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:visibility="gone"
          android:id="@+id/min_faran_cover"
          android:layout_weight="1"
          android:layout_marginLeft="3dp"
          android:layout_height="wrap_content">

          <EditText
            android:layout_width="match_parent"
            android:id="@+id/min_degrees_faran"
            android:hint="(\u2109)"
            android:layout_height="wrap_content"
            android:textSize="@dimen/formTextSize"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:layout_weight="3"
          android:layout_marginLeft="3dp"
          android:layout_height="wrap_content">

          <EditText
            android:id="@+id/max_degrees_cel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Max Temperature (\u2103)"
            android:textSize="@dimen/formTextSize"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:id="@+id/max_faran_cover"
          android:layout_weight="1"
          android:visibility="gone"
          android:layout_marginLeft="3dp"
          android:layout_height="wrap_content">

          <EditText
            android:id="@+id/max_degrees_faran"
            android:layout_width="match_parent"
            android:hint="(\u2109)"
            android:layout_height="wrap_content"
            android:textSize="@dimen/formTextSize"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <!-- f \u2109 c \u2103-->

      </LinearLayout>

    </LinearLayout>


  </android.support.v7.widget.CardView>
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/loginform"
    android:layout_marginBottom="@dimen/loginform"
    android:layout_marginRight="@dimen/loginform"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_marginRight="8dp"
      android:layout_marginTop="3dp"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:layout_marginLeft="8dp"
      android:layout_gravity="center_vertical"
      android:orientation="vertical"
      android:layout_height="match_parent">
      <LinearLayout
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:layout_weight="3"
          android:layout_marginLeft="3dp"
          android:layout_height="wrap_content">
          <!-- f \u2109 c \u2103-->

          <EditText
            android:id="@+id/mslp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="M.S.L.Pr(mb) or 850mb.Ht.(gpm)"
            android:textSize="@dimen/formTextSize"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

      </LinearLayout>


    </LinearLayout>


  </android.support.v7.widget.CardView>
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/loginform"
    android:layout_marginLeft="@dimen/loginform"
    android:layout_marginRight="@dimen/loginform"
    android:layout_height="wrap_content">
    <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="match_parent">
      <TextView
        android:text="Time Marks"
        android:textStyle="italic|bold"
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
      <TextView
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDC4C4C4"/>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:layout_height="wrap_content">

          <EditText
            android:id="@+id/time_marks_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time Marks Barograph"
            android:textSize="@dimen/formTextSize"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:layout_height="wrap_content">

          <EditText
            android:id="@+id/time_marks_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time Marks Anemograph"
            android:textSize="@dimen/formTextSize"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:layout_height="wrap_content">

          <EditText
            android:id="@+id/other_tmarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Other T/Marks"
            android:textSize="@dimen/formTextSize"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:layout_weight="2"
          android:layout_height="wrap_content">

          <EditText
            android:id="@+id/remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Remarks Or Any Other Observations"
            android:textSize="@dimen/formTextSize"
            android:inputType="text"
            android:maxLines="3"
            android:singleLine="false" />

        </android.support.design.widget.TextInputLayout>

      </LinearLayout>

      <TextView
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDC4C4C4"/>


    </LinearLayout>

  </android.support.v7.widget.CardView>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:layout_height="55dp">
    <TextView
      android:layout_width="0dp"
      android:visibility="invisible"
      android:layout_weight="2"
      android:layout_height="0dp" />

    <Button
      android:id="@+id/back_page3"
      android:background="@drawable/button_back"
      android:textColor="@color/popup_white"
      android:textSize="12dp"
      android:layout_marginRight="12dp"
      android:layout_width="70dp"
      android:layout_gravity="center"
      android:layout_height="30dp"
      android:text="back"/>

    <TextView
      android:layout_width="0dp"
      android:visibility="invisible"
      android:layout_weight="1"
      android:layout_height="0dp" />


    <Button
      android:id="@+id/next_page5"
      android:background="@drawable/button_next"
      android:textColor="@color/popup_white"
      android:textSize="12dp"
      android:layout_marginRight="12dp"
      android:layout_width="70dp"
      android:layout_gravity="center"
      android:layout_height="30dp"
      android:text="next"/>
    <TextView
      android:layout_width="0dp"
      android:visibility="invisible"
      android:layout_weight="2"
      android:layout_height="0dp" />


  </LinearLayout>


</LinearLayout>
