<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:background="@color/popup_white"
  android:layout_height="wrap_content">

  <RelativeLayout
    android:id="@+id/singleRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <Button
      android:id="@+id/btn"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:background="@drawable/ic_action_delete" />
    <Button
      android:id="@+id/edit"
        android:visibility="invisible"
      android:layout_marginEnd="30dp"
      android:layout_marginStart="-65dp"
      android:layout_toEndOf="@+id/btn"
      android:layout_width="30sp"
      android:textAllCaps="false"
      android:background="@drawable/ic_action_edit"
      android:layout_centerVertical="true"
      android:layout_alignParentEnd="true"
      android:layout_height="30dp" />

    <TextView
      android:id="@+id/tvTime"
      android:text="12:00Z"
      android:textSize="20dp"
      android:scaleY="1.4"
      android:textColor="@color/colorAccent"
      android:gravity="center_vertical"
      android:layout_centerVertical="true"
      android:src="@mipmap/ic_launcher"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tvCategory"
      android:text="User Name"
      android:textSize="15sp"
      android:layout_marginTop="6dp"
      android:maxLines="1"
      android:textColor="#505050"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_toRightOf="@+id/tvTime"
      android:layout_toEndOf="@+id/tvTime"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp" />

    <TextView
      android:id="@+id/tvDate"
      android:text="Job Profile"
      android:textSize="12sp"
      android:textStyle="italic"
      android:maxLines="1"
      android:textColor="#606060"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tvCategory"
      android:layout_alignLeft="@+id/tvCategory"
      android:layout_alignStart="@+id/tvCategory" />

  </RelativeLayout>

  <View
    android:layout_below="@+id/singleRow"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#f2f2f2" />


</RelativeLayout>
